<%- include('partials/head', {title: 'Formulario de creación' }) %>
	<body>
		<div id="contenedor">
			<%- include('./partials/header') %>
				<main class="body__main">
					<h1>Registro</h1><!--id="form-register" implementacion-->
					<form  id="fform-register" action="/usuarios/registro" method="POST" class="formularios">
						<div class="form__box__imagen">
						<img class="img" src="/stock-photos/mini-torta-red-velvet-2.jpg" alt="">
						</div>
						<div class="form__box__formulario">
						<div class="control-formularios">

							<input type="text"
							class=" controls <%= locals.errors && errors.nombre ? 'is-invalid' : null %> " 
							value="<%= locals.old && old.nombre ? old.nombre : null %>"
							id="name"  name="nombre" placeholder="Nombre" minlength="3">
							<small class="text-danger"><%= locals.errors && errors.nombre ? errors.nombre.msg : null %> </small>
							<small id="errorNombre" class="text-danger"></small>
							
							
							
						</div>	
							
						

						<div class="control-formularios">
							<input  id="apellido" type="text" name="apellido" placeholder="Apellido" minlength="3"
								class="controls <%= locals.errors && errors.apellido ? 'is-invalid' : null %>"
								value="<%= locals.old && old.apellido ? old.apellido : null %>">
							<small  class="text-danger">
								<%= locals.errors && errors.apellido? errors.apellido.msg : null %>
							</small>
							<small id="errorApellido" class="text-danger"></small>

						</div>
						
						<div class="control-formularios">
							<input id="telefono" type="text" name="phone" placeholder="Número de teléfono"
								class="controls <%= locals.errors && errors.phone ? 'is-invalid' : null %>"
								value="<%= locals.old && old.phone ? old.phone : null %>">
							<small  class="text-danger">
								<%= locals.errors && errors.phone? errors.phone.msg : null %>
							</small>
							<small id="errorPhone" class="text-danger"></small>
						</div>
						
						<div class="control-formularios">
							<input id="email" type="email" name="email" placeholder="E-mail"
								class="controls <%= locals.errors && errors.email? 'is-invalid' : null %>"
								value="<%= locals.old && old.email? old.email : null %>">
							<small  class="text-danger">
								<%= locals.errors && errors.email? errors.email.msg : null %>
							</small>
							<small id="errorEmail" class="text-danger"></small>
						</div>
						
						<div class="control-formularios">
							<input type="password" name="contraseña" id="pass" placeholder="Contraseña"
								class="controls  <%= locals.errors && errors.contraseña ? 'is-invalid' : null %>"
								value="<%= locals.old && old.contraseña ? old.contraseña : null %>">
								<!--agregando linea de codigo de ojiito (span)-->
								<!--<span class="input-group-text" style="cursor: pointer;" id="btn-show-pass"><i class="fa-solid fa-eye-slash" ></i></span>-->
								<small  class="text-danger">
								<%= locals.errors && errors.contraseña? errors.contraseña.msg : null %>
							</small>
							<small id="errorPass" class="text-danger"></small>
							<ul id="msgPass" hidden >
							  <li id="mayu">Una mayúscula</li>
							  <li id="minu">Un minúscula</li>
							  <li id="num">Un número</li>
							  <li id="esp">Un caracter especial ($@$!%*?&)</li>
							  <li id="min">Mínimo 6 caracteres</li>
							  <li id="max">Máximo 8 caracteres</li>
							</ul>
						</div>
					
						<div class="control-formularios">
							<input id="pass2" type="password" name="contraseña2" placeholder="Repetir contraseña"
								class="controls <%= locals.errors && errors.contraseña2? 'is-invalid' : null %>"
								value="<%= locals.old && old.contraseña2 ? old.contraseña2: null %>">
							<small id="errorPass2" class="text-danger">
								<%= locals.errors && errors.contraseña2? errors.contraseña2.msg : null %>
							</small>
							<small id="errorPass2" class="text-danger" ></small>
						</div>
						
						<div class="form__box">
							<input class="form__checkbox" type="checkbox" id="terminos" name="terms">
							<label class="form__label--small" for="terminos">Acepto los términos y condiciones</label>
							<small class="text-danger"><%= locals.errors && errors.terms ? errors.terms.msg :null %></small>
						</div>
						<button type="submit" class="boton-formularios">Registrarse</a></button>
						<div class="registros">
							<p>Ya estás registrado?</p>&nbsp;<a href="/usuarios/login" title="ingresa con tu usuario" style="font-weight: bold;">Inicia sesión</a>
						</div>
					</div>
					</form>
				</main>
				<%- include('./partials/footer') %>
				<script src="/js/userRegister.js"></script>
		</div>
	</body>

	</html>